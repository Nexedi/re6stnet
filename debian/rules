#!/usr/bin/make -f
# -*- makefile -*-
MANPAGELIST := $(patsubst %.rst, %.1, $(wildcard docs/*.rst))

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

override_dh_auto_clean:
	dh_auto_clean
	rm -f $(MANPAGELIST)

%.1: %.rst
	rst2man $< $@

override_dh_installman: $(MANPAGELIST)
	dh_installman $^

%:
	dh $@ --with python2 --buildsystem=python_distutils
